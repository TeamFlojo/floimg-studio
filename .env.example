# imgflo-studio environment variables
# Copy this file to .env and fill in the values

# Development settings
NODE_ENV=development

# Sandbox mode (enables ccdsp alias for Claude Code without permission prompts)
# Only enable this in isolated/sandboxed environments
IS_SANDBOX=0

# Optional: Override default ports
# IMGFLO_STUDIO_FE_PORT=5173
# IMGFLO_STUDIO_BE_PORT=3001
# IMGFLO_STUDIO_CHROME_PORT=9223

# Optional: Custom container prefix (useful when running multiple instances)
# CONTAINER_PREFIX=imgflo-studio
